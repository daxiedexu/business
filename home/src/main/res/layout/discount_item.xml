<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="4dp"
    android:layout_width="70dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/discount_image"
        android:layout_width="70dp"
        android:layout_height="70dp">
    </ImageView>
    <com.zhang.home.width.MoreMoneyView
        android:id="@+id/discount_more"
        android:layout_width="70dp"
        android:layout_height="70dp">
    </com.zhang.home.width.MoreMoneyView>
    <TextView
        android:id="@+id/discount_price"
        android:textColor="#FF0000"
        android:textSize="12sp"
        android:layout_below="@id/discount_image"
        android:layout_width="70dp"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/discount_morePrice"
        android:textColor="#878484"
        android:textSize="12sp"
        android:layout_below="@id/discount_price"
        android:layout_width="70dp"
        android:layout_height="wrap_content">
    </TextView>
</RelativeLayout>