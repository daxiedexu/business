<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">
    <RelativeLayout
        android:id="@+id/head"
        android:orientation="horizontal"
        android:background="#ff8800"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:text="搜索商品/品类"
            android:layout_marginLeft="32dp"
            android:textSize="16dp"
            android:textColor="#FFFFFF"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>
    <com.youth.banner.Banner
        android:id="@+id/fg_home_banner"
        android:layout_below="@id/head"
        android:layout_width="match_parent"
        android:layout_height="160dp">
    </com.youth.banner.Banner>
    <RelativeLayout
        android:id="@+id/notice"
        android:layout_marginTop="6dp"
        android:layout_below="@id/fg_home_banner"
        android:background="@drawable/ll_back"
        android:layout_width="match_parent"
        android:layout_height="32dp">
        <TextView
            android:id="@+id/notice_text"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="公告"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextSwitcher
            android:id="@+id/fg_home_textSwitcher"
            android:layout_toRightOf="@id/notice_text"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextSwitcher>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fg_home_net"
        android:layout_marginTop="10dp"
        android:layout_below="@id/notice"
        android:layout_width="match_parent"
        android:layout_height="160dp">
    </androidx.recyclerview.widget.RecyclerView>
    <com.zhouwei.mzbanner.MZBannerView
        android:id="@+id/fg_home_mzBanner"
        android:layout_below="@id/fg_home_net"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="6dp"
        app:open_mz_mode="true"
        app:middle_page_cover="true"
        app:canLoop="false"
        app:indicatorAlign="center"
        app:indicatorPaddingLeft="10dp">
    </com.zhouwei.mzbanner.MZBannerView>
</RelativeLayout>