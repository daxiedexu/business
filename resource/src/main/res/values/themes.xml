<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Business" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="orange">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/orange</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp56</item>
    </style>

    <!-- person页面 -->
        <style name="Person_Order">
            <item name="android:layout_weight">1</item>
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:gravity">center</item>
        </style>


        <style name="Person_Item">
            <item name="android:paddingLeft">@dimen/dp10</item>
            <item name="android:background">@drawable/underline</item>
            <item name="android:gravity">center_vertical</item>
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:drawableRight">@drawable/icon_arrow</item>
        </style>

    <!-- 横向分割线 -->
        <style name="Horizontal_divider">
            <item name="android:background">@color/gray2</item>
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">5dp</item>
        </style>
    <!-- 纵向分割线 -->
        <style name="Vertical_divider">
            <item name="android:background">@color/gray2</item>
            <item name="android:layout_width">5px</item>
            <item name="android:layout_height">match_parent</item>
        </style>
    <!-- person页面 -->

</resources>